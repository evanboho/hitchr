<table>
  <tr>
    <td>
      <%= gravatar_for @ride.user, :size => 50 %>
    </td>
    <td colspan="2">
      <%= link_to "Back to all rides", rides_path %>
    </td>
  </tr>
    <td>
      <%= link_to username(@ride.user), @ride.user %> 
  is driving from <%= "#{@ride.origin}, #{@ride.originstate} 
                       to #{@ride.destination}, #{@ride.destinationstate}"%>
  on <%= @ride.date.to_formatted_s(:long) %>
  at <strong><%= @ride.time.hour %> 
  <% if @ride.time.hour < 12 %>
  am
  <% else %>
  pm
  <% end %></strong>
    </td>
    <td>
    </td>
    <% if @ride.user == current_user %>
      <td>
        <%= link_to "edit", edit_ride_path(@ride) %>
      </td>
    <% end %>
  </tr>
  <tr>
    <td>
      <% unless @ride.message.nil? %>
        "<%= @ride.message %>"
      <% end %>
    <br />
    <br />
    </td>
 </tr>
 <tr>
 </tr>
 
  
</table>