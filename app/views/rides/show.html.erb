<table>
  <tr>
    <td>
      <%= gravatar_for @ride.user, :size => 50 %>
    </td>
    <td>
      <%= link_to "Back to all rides", rides_path %>
    </td>
  </tr>
    <td>
      <%= username(@ride.user) %> 
  is driving from 
  <%= @ride.origin %> 
  to 
  <%= @ride.destination %>
  on 
  <%= @ride.date.to_formatted_s(:short) %><br /><br />
    </td>
  </tr>
  <tr>
    <td>
      <% unless @ride.message.nil? %>
        "<%= @ride.message %>"
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= "Other rides from #{@ride.origin}:" %>
    </td>
  </tr>
  <% Ride.where(:origin => @ride.origin).each do |ride| %>
    <tr>
      <td> 
        <%= username(@ride.user) %> is going from 
        <%= link_to "#{ride.origin} to #{ride.destination}", ride %>
        on 
        <%= ride.date.to_formatted_s(:long) %>
      </td>
    </tr>
  <% end %>
</table>