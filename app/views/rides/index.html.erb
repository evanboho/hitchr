<% provide :title, "rides" %>
<h3 class="rides">Rides</h3>
<%= form_tag rides_path, :method => 'get' do %>
  <p>
  <%= label_tag :search, "Start city:" %>
  <%= text_field_tag :search, params[:search], :placeholder => "enter search..." %>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<%= will_paginate %><br/>
<table class="rides">
  <%= render @rides %>
</table>
