<%= render 'shared/error_messages_rides', :object => f.object %>
<table class="rideform round shadow_down">
  <tr>
    <td colspan="1">
      <%= f.label :origin, "From:" %>
      <%= f.text_field :origin %> 
      <%= f.select(:originstate, ['IA', 'IL', 'IN', 'WI']) %>
    </td>
    <td colspan="1">
      <%= f.label :destination, "To:" %>
      <%= f.text_field :destination %> 
      <%= f.select(:destinationstate, ['IA', 'IL', 'IN', 'WI']) %>
    </td>
    <td></td>
  </tr>
  <tr>
    <td colspan="3">
      <%= f.label :datetime, "On:" %>
      <%= f.datetime_select(:datetime, 
          					:order => [:month, :day, :hour, :minute], 
       					    :ampm => true, 
        				    :minute_step => 15
        				    ) %> 
    </td>
    
  </tr>
</div>
<tr><td>
<div class="textarea">
  <%= f.label :message, "More info" %><br/>
  <%= f.text_area :message %>
</div>
</td></tr>
