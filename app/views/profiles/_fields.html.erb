<table>
  <tr>
    <td align="right">
      <%= f.label :birthday, "Birthday:" %>
    </td>
    <td>
      <%= f.date_select(:birthday, :order => [:month, :day, :year], :start_year => 1940, :end_year => 1994) %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :sex, "gender" %>
    </td>
    <td>
      <%= f.select(:sex, options_for_select(['woman', 'man', 'human', 'traveller'])) %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :home_town, "" %>
    </td>
    <td>
      <%= f.text_field :home_town %>
    </td>
  </tr>
  <tr>
    <td colspan="2">
    Tell us about yourself:<br/>

  <%= f.text_area :about_block %>
</table>